@import 'normalize.css'
@import 'jeet'
@import 'variables.styl'
@import 'typography.styl'

@media (max-width: 1200px)
	.home_hero
		.vid_bg
			max-width: none
			height: 100%
	
	.home_hero
		background-size: auto 100% !important
		background-position: top right !important

	.newsletter_form
		letter-spacing: .1em
		font-size: 12px
	
	#contact_info, #contact_info_mobile
		.intro, .info
			stack()
		.info
			margin-top: quarter

@media (max-width: 1024px)
	.nav_links_clear
		right: 40px
		a
			margin-left: 40px

	.project_thumb
		text-align: left
		.overlay
			cf()
			position: relative
			top: 0
			bottom: 0
			left: 0
			right: 0
			padding: 20px
			opacity: 1
		.text
			position: static
			transform: none
			-webkit-transform: none
			width: auto
			opacity: 1
		.couple
			float: left
			font-size: 13px
		.couple::after
			display: none
		.location
			float: left
			clear: both
			font-size: 11px
			
	.team
		.profiles
			margin-bottom: -30px
		.profile
			col(1/2, uncycle: 4, cycle: 2, gutter: 8)
			text-align: center
			margin-bottom: quarter
			
	.blog_post
		.content
			.text
				width: 100%
			.fb-like
				float: none
				span
					margin-top: quarter
					
@media (max-width: 768px)
	.mega_wrapper
		margin: 0px
	
	.nav_mobile
		display: block
		left: 0px
		right: 0px
	
	.nav_clear, .nav_reg
		display: none
		
	.nav_end
		display: none
		height: 60px
		left: 0px
		right: 0px
		position: fixed
	
	#nav_logo
		left: 10px
	
	#nav_links
		right: 20px
	
	.home_hero, .about_hero, .project_hero
		height: 480px
	
	.home_hero
		background-size: auto 100% !important
		background-position: center !important
		.vid_bg
			display: none
	
	.home_hero_button
		top: 230px

	.project_thumb
		stack()
		.couple:after
			content: ""
			display: inline
			border-bottom: none
			border-right: 1px solid green
			display: inline
			height: 15px
			margin: 0 12px
		.location
			clear: none
	
	.about_hero
		.title
			top: 300px
		.divider
			top: 300px
	
	.about_info, .team
		.headline
			border: none
		.text, .profiles
			width: 100%
			margin-top: 20px

	.about_info, .team
		.headline,.info, .profiles
			stack()
			
	.locations
		.description
			width: 100%
	
	.project_info
		.description
			stack()
			padding-top: 0px
			border: none
			margin-bottom: half
		.credits
			stack()
			text-align: center

	.blog_post
		.date
			stack()
			padding-top: 30px
		.content
			stack()
			border: none
			padding-top: 25px
			.title
				margin-bottom: 35px
			.fluid-width-video-wrapper
				margin-bottom: 35px
			.read_more
				margin-top: 30px
		
	.footer
		.newsletter_text, .newsletter_form
			stack()
		.newsletter_form
			unshift()
			margin-top: 30px
			
@media (max-width: 600px)

	.section_title
		margin-bottom: quarter
	
	.project_thumb
		margin-bottom: quarter

	.home_hero_button
		align(h)
		top: 220px
		padding: 0
		border: 0
		overflow: visible
		.title
			top: 0
			font-weight: 700
			font-size: 3em
			line-height: 1.1em
			display: block
		.divider1, .divider2, .play_triangle
			display: none
		.date
			display: block
			top: -115px			
		.date::after
			content: url('/assets/img/play.svg')
			width: 50px
			display: block
			position: relative
			margin: 0 auto
			top: 105px
	
	.about_hero
		.title
			top: 250px
			padding: 25px 0
			line-height: 1.3em
			margin: 0 3%
		.divider
			top: 250px
			
	.about_info
		.headline
			padding-top: 0px
			
	.team
		margin-top: half
	
	.blog_post
		margin-top: half
	.blog_post:first-of-type
		margin-top: 120px
			
	#contact_info_mobile
		margin-top: 120px
	
	.footer
		margin-top: 120px
		margin-bottom: 30px

@media (max-width: 550px)

	.project_thumb
		.couple::after
			display: none
		.location
			clear: both
			
	.project_hero_button
		padding: 40px 50px
	
	.project_hero_button::after
		top: -10px
		bottom: -10px
		left: -10px
		right: -10px

	.logos
		margin-top: normal
		.logo
			col(1/3)
			//margin-bottom: quarter
		.logo:nth-child(-n+5)
			col(1/2)
			//margin-bottom: quarter
		.logo:nth-child(3), .logo:nth-child(5), .logo:nth-child(8)
			margin-right: 0

	.footer
		overflow: visible
		
	.newsletter_form
		.button
			font-size: 10px
		
	.row_2
		.mini_logo
			top: -2px
			float: right
		.divider_1
			display: none
		.copyright
			position: absolute
			top: 122px
		#facebook, #pinterest, #twitter
			width: 30px
			float: left
			margin: 0 25px 0 0
			top: 3px


@media all and (device-width: 768px) and (device-height: 1024px) and (orientation:landscape)
	.home_hero
		background-size: auto 100% !important
		background-position: center !important
		.vid_bg
			display: none
	